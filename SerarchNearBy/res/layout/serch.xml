<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:background="@drawable/bg_title_bar"
            >
        <ImageButton android:id="@+id/back"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:src="@drawable/ic_nav_back"
                     android:background="@drawable/back"
                     android:layout_weight="0.1"
                />
        <EditText android:id="@+id/condition"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:hint="请输入所要搜索的内容"
                  android:gravity="center"
                  android:layout_weight="0.5"
                  android:textSize="18dp"
                  android:textColor="#ff343434"
                  android:layout_margin="5dp"
                  android:background="@drawable/abs__textfield_search_selected_holo_dark"
                />
        <ImageButton android:id="@+id/goseach"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_weight="0.1"
                     android:background="@drawable/serch_bt"
                     android:src="@drawable/abs__ic_search"
                />
    </LinearLayout>
    <com.example.SerarchNearBy.view.CustomListView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:cacheColorHint="@android:color/transparent"
            android:fadingEdgeLength="0dp"
            android:divider="#ff9e9e9e"
            android:dividerHeight="0.2dp"
            />

</LinearLayout>